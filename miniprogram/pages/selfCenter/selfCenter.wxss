#container{
  /* height: 100vh; */
  width: 100%;
  background-color: #ffc8c4;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 15px;
  color: rgb(59, 59, 59);
}
image{
  height: 20px;
  width: 20px;
}
.separateline{
  border: 0.9px solid rgb(236, 236, 236);
  width: 90%;
}
.menu-item{
  height: 55px;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;

}
.menu-item image{
  margin-left: 35rpx;

}
.menu-item view{
  margin-left: 10px;
}
.menu-item .arrow-icon{
  position: absolute;
  right: 10%;
}
#flex-item1{
  width: 90%;
  border-radius: 10px;
  background-color: white;
  margin-top: 10px;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo{
  border: 0;
  width: 90%;
  padding-left: 5px;
}
.userinfo-avatar{
  height: 60px;
  width: 60px;
  border-radius: 30px;
  margin-left: 10px;

}
.userinfo-nickname{
  margin-left: 20px;
  color: #fcb1ac;
  font-size: 20px;
  font-weight: 600;
}
#flex-item2{
  width: 90%;
  border-radius: 10px;
  background-color: white;
  margin-top: 10px;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#service button{
  height: 55px;
  width: 90%;
  left: 5%;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}



