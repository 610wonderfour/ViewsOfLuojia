/* pages/collections/collections.wxss */
.container{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #ffc8c4;
}

.collection-card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 80%;
  height: 200rpx;
  border-radius: 20rpx;
  border: 1px solid #ffc8c4;
  background-color: white;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  padding: 15rpx;
}

.collection-card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}